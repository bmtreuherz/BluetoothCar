<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bradley.bluetoothcar.ArduinoMain"
    android:background="#C3C3C3">

    <EditText android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "0dp"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Enter some text"
        android:imeOptions="actionSend"
        android:singleLine="true"
        android:visibility="gone"/>

    <Button android:id="@+id/functionOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="Function 1"
        android:visibility="gone"/>

    <Button android:id="@+id/functionTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"/>

    <View android:id="@+id/fakeView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"/>

    <SeekBar android:id="@+id/seekBarSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:layout_above="@+id/fakeView"
        android:layout_marginRight ="300dp"
        />

    <SeekBar android:id="@+id/seekBarTurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft ="300dp"
        />

    <Button android:id="@+id/moveForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fakeView"
        android:layout_marginLeft="50dp"
        android:text="Forward"/>

    <Button android:id="@+id/moveReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fakeView"
        android:layout_marginLeft="50dp"
        android:text="Reverse"/>

    <Button android:id="@+id/turnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="10dp"
        android:text="Left"/>

    <Button android:id="@+id/turnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="120dp"
        android:text="Right"/>

</RelativeLayout>
